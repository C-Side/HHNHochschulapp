<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="155dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner">

        <LinearLayout
            android:id="@+id/textholder"
            android:orientation="vertical"
            android:layout_width="265dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/questionheader"
                android:layout_gravity="top|left"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:textSize="20dp"
                android:lines="2"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/questiontext"
                android:paddingTop="10dp"
                android:paddingLeft="8dp"
                android:textSize="16dp"
                android:lines="4"
                android:ellipsize="end"/>

        </LinearLayout>

        <View
            android:id="@+id/item_divider_hor"
            android:layout_width= "1dp"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textholder"
            android:layout_alignEnd="@+id/textholder" />

        <LinearLayout
            android:id="@+id/leftside_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/item_divider_hor"
            android:layout_toEndOf="@+id/item_divider_hor"
            android:background="#dfe2e1">

            <LinearLayout
                android:id="@+id/usergroup"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/usericon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_user_icon"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/usernickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textColor="#4f8ce7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/counterholder"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/commentCounter"
                    android:background="@drawable/forumcircle"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:textAlignment="gravity"
                    android:gravity="center|center_horizontal"
                    android:textSize="20dp"
                    android:textStyle="bold"
                     />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>